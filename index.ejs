<!DOCTYPE html>
<html>
  <head>
    <title>GameSpot- Home</title>
    <!-- CSS -->
    <link rel="stylesheet" href="/bibliotecas/bootstrap/css/bootstrap-grid.css">
    <link rel="stylesheet" href="/bibliotecas/bootstrap/css/bootstrap-grid.min.css">
    <link rel="stylesheet" href="/bibliotecas/bootstrap/css/bootstrap-reboot.css">
    <link rel="stylesheet" href="/bibliotecas/bootstrap/css/bootstrap-reboot.min.css">
    <link rel="stylesheet" href="/bibliotecas/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/bibliotecas/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <!--Awesome Fonts-->
    <script src="https://kit.fontawesome.com/1cce84ab7f.js" crossorigin="anonymous"></script>
    <!--Bootstrap Scripts-->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
  </head>
<body>
  <section id="title">
    <div class="container-fluid">
    <!-- Nav Bar -->
      <div class="navbar navbar-expand-lg navbar-dark">
        <a href="/" class="navbar-brand">GameSpot</a>
        <br>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a href="/xbox" class="nav-link">Xbox One</a>
            </li>
            <li class="nav-item">
              <a href="/ps4" class="nav-link">PlayStation 4</a>
            </li>
            <li class="nav-item">
              <a href="/switch" class="nav-link">Nintendo Switch</a>
            </li>
            <li class="nav-item">
              <a href="/pc" class="nav-link">PC</a>
            </li>
            <li  class="nav-item">
              <div class="dropdown show">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fas fa-user"></i>
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <% if (authenticated === true) { %>
                    <h6 class="dropdown-header">Hello, <%= userLogged.name %> </h6>
                  <% } %>
                  <% if( authenticated === false){ %>
                    <a class="dropdown-item" href="/login"> <h6>Login</h6></a>
                    <a class="dropdown-item" href="/register"><h6>Register</h6> </a>
                  <% } %>
                  <% if (authenticated === true) { %>
                    <a class="dropdown-item" href="#"> <h6>My games</h6></a>
                    <a class="dropdown-item" href="/settings"> <h6>My profile</h6></a>
                    <a class="dropdown-item" href="/logout"> <h6>Logout</h6></a>
                  <% } %>
                </div>
              </div>
            </li>
          </ul>
        </div>
      </div>
    
      <!-- Title -->
      <div class="row">
        <div class="col-lg-6">
          <div>
            <h1 class="big-heading">Checkout the new releases and more.</h1>
            <a href="../jsp/video-games.jsp">
            <button type="button" class="btn btn-dark btn-lg download-button">View Now</button>
            </a>
            <button type="button" class="btn btn-outline-light btn-lg download-button"> Explore</button>
          </div>
        </div>
        <div class="col-lg-6">
          <div>
            <img class="title-image" src="/images/super-smash.png" alt="iphone-mockup">
          </div>
        </div>
      </div>
    </div>

  </section>


  <!-- Features -->

  <section id="features">
    <div class="fluid-container">
      <div class="row">
        <div class="feature-box col-lg-4">
          <i class="icon fas fa-bullseye fa-4x features-image"></i>
          <h3 class="features-text">Easy to use.</h3>
          <p>So easy to use, even your dog could do it.</p>
        </div>
        <div class="feature-box col-lg-4">
          <i class="icon fas fa-check-circle fa-4x features-image"></i>
          <h3 class="features-text">Elite Clientele</h3>
          <p>We have all the dogs, the greatest dogs.</p>
        </div>
        <div class="feature-box col-lg-4">
          <i class="icon fas fa-heart fa-4x "></i>
          <h3 class="feature-text">Guaranteed to work.</h3>
          <p>Find the love of your dog's life or your money back.</p>
        </div>
      </div>
    </div>
  </section>


  <!-- Testimonials -->

  <section id="testimonials" class="carousel slide" data-ride="corousel" data-interval=3000>
    <div class="carousel-inner">
      <div class="container-fluid">
        <!--Default Testimonial-->
        <div class="carousel-item active">
          <h2 class = "testimonials-text">New Releases</h2>
          <img class="testimonials-image" src="/images/spider-man.jpg" alt="Gears Tactics">
        </div>
        <!--Second testimonial-->
        <div class="carousel-item">
          <h2 class="testimonials-text">Best Sellers</h2>
          <img class="testimonials-image" src="/images/cod.jpg" alt="lady-profile">
        </div>
        <!--Third testimonial-->
        <div class="carousel-item">
          <h2 class="testimonials-text">Coming Soon...</h2>
          <img class="testimonials-image" src="/images/nba-2k21.jpg" alt="dog-profile">
        </div>
        <!-- Slide carousel buttons-->
        <a class="carousel-control-prev" href="#testimonials" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#testimonials" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>



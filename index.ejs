    <img class="testimonial-image" src="images/lady-img.jpg" alt="lady-profile">
    <em>Beverly, Illinois</em> -->

  </section>


  <!-- Press -->

  <section id="press">
    <img class="press-logo" src="../images/xbox.png" alt="xbox-logo">
    <img class="press-logo" src="../images/PlayStation.png" alt="playstation-logo">
    <img class="press-logo" src="../images/switch-logo.png" alt="biz-insider-logo">
    <img class="press-logo" src="../images/monitor.png" alt="mashable-logo">

  </section>


  <!-- Pricing -->

  <section id="pricing">

    <h2 class="price-text">Checkout the new content</h2>

    <div class="card-deck">
      <!--Chihuhua package-->
      <div class="pricing-column col-lg-4 col-md-6">
        <div class="card">
           
        </div>
      </div>
      <!--Labrador Packager-->
      <div class="pricing-column col-lg-4 col-md-6">
        <!--Item-->
        <div class="card">
            	
        </div>
      </div>
      <div class="pricing-column col-lg-4">
        <!--Item-->
        <div class="card">
            
        </div>
      </div>
    </div>
  </section>


